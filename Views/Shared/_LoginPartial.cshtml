@using Microsoft.AspNetCore.Identity
@using AuthSystem.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Create">Create Order</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Index">List Order</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Search">Search Order</a>
    </li>

    <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>
    </li>
}
</ul>
